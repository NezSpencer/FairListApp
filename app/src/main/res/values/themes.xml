<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FairListApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_purple</item>
        <item name="colorPrimaryVariant">@color/brand_light_purple</item>
        <item name="colorOnPrimary">@color/brand_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_purple</item>
        <item name="colorSecondaryVariant">@color/brand_light_purple</item>
        <item name="colorOnSecondary">@color/brand_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/indieflower_regular</item>
        <item name="colorError">@color/dark_red</item>
        <item name="colorOnError">@color/brand_white</item>
        <item name="colorSurface">@color/dirty_white</item>
        <item name="android:colorBackground">@color/dirty_white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorAccent">@color/brand_green</item>
    </style>

    <style name="bodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="bodyText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="captionText">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="captionText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>